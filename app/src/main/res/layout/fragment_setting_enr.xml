        <include layout="@layout/activity_item_setting_jntemp" />

        <include layout="@layout/activity_item_setting_ljtemp" />

        <include layout="@layout/activity_item_setting_sdcontrol" />

        <include layout="@layout/activity_item_setting_xf" />

